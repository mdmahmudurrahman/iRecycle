<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <% if user_signed_in? &&  current_user.admin? %>
          <th>Action</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @materials.each_with_index do |material, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= material.name %></td>
          <td><%= material.description %></td>
          <td><%= material.category.title %></td>
          <% if user_signed_in? &&  current_user.admin? %>
            <td>
              <%= link_to "Delete", [:admin, material], method: :delete, data: {confirm: "Are you sure?", title: 'Confirm Deletion'} %> 
              | 
              <%= link_to "Edit", "#", class: "edit_material", data: {material: material} %>
            </td>
          <% end %>  
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>
