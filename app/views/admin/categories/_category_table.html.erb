<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <% if user_signed_in? &&  current_user.admin? %>
          <th>Action</th>
        <% end %>  
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= category.title %></td>
          <td><%= category.description %></td>
          <% if user_signed_in? &&  current_user.admin? %>
            <td>
              <%= link_to "Delete", [:admin, category], method: :delete, data: {confirm: "Are you sure?", title: 'Confirm Deletion'} %> 
              | 
              <%= link_to "Edit", "#", class: "edit_category", data: {category: category} %>
            </td>
          <% end %>  
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>
