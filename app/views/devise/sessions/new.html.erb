<div id="login">
  <h3 class="text-center text-white pt-5">Login form</h3>
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <h3 class="text-center text-info">Login</h3>
            <div class="form-group">
              <%= f.label :email, class: "text-info" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "username", class: "form-control" %> 
            </div>
            <div class="form-group">
              <%= f.label :password, class: "text-info" %><br />
              <%= f.password_field :password, autocomplete: "current-password", id: "password", class: "form-control" %>
            </div>
            <div class="form-group row">
              <div class="col-md-8">
                <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me, id: "remember-me" %>
                    <%= f.label :remember_me, class: "text-info" %>
                <% end %>
              </div>
            <div class="col-md-4">
              <%= link_to "Register here", new_user_registration_path, class: "text-info float-right" %>
            </div>
            <br>
            <div class="col-md-12">
              <%= f.submit "Log in", class: "btn btn-info btn-md btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>